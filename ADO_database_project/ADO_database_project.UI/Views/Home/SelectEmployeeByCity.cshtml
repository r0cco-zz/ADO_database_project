@model ADO_database_project.UI.Models.EmployeesCitiesVM

@{
    ViewBag.Title = "SelectEmployeeByCity";
}

<h2>Select Employee By City</h2>

<div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Dropdown
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        @foreach (string city in Model.listOfCities)
        {
            <li><a href="#">@city</a></li>
        }

    </ul>
</div>